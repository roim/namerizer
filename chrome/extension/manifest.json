{
  "manifest_version": 2,

  "name": "Namerizer",
  "description": "Rename your Facebook contacts!",
  "version": "1.0.3",
  
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "web_accessible_resources": ["commonNicknamesIcon.png"],

  "permissions": [
    "*://*.facebook.com/*",
    "http://namerizer.herokuapp.com/*"
  ],
  
  "background": {
    "scripts": ["jquery.js", "backfrontend.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["jquery.js", "common.js", "namerizer.js", "namerizer_about.js", "namerizer_editnickname.js"],
	  "run_at": "document_start"
    }
  ]
}