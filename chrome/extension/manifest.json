{
  "manifest_version": 2,

  "name": "Namerizer",
  "description": "Rename your Facebook contacts!",
  "version": "1.0.3",
  
  "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },
  "web_accessible_resources": ["images/commonNicknamesIcon.png"],

  "permissions": [
    "*://*.facebook.com/*",
    "http://namerizer.herokuapp.com/*",
    "tabs"
  ],
  
  "background": {
    "scripts": ["jquery.js", "backfrontend.js"],
    "persistent": false
  },
  "browser_action": {
	"default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Namerizer App"
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["jquery.js", "common.js", "namerizer.js", "namerizer_about.js", "namerizer_editnickname.js"],
	  "run_at": "document_start"
    }
  ]
}